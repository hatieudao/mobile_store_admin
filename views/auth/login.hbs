<div class="py-4 px-4 admin-login-container">
    <header class="py-0 admin-login-header">
        <h3 class="text-center text-dark pt-5">Login form</h3>
    </header>
    <form method="post" class="container admin-login-form">
        <div class="row py-3 px-2">
            <div class="col-md-4">
                Username
            </div>
            <div class="col-md-8">
                <input  name="username" type="text" placeholder="admin" class="w-100">
            </div>
        </div>
        <div class="row py-3 px-2">
            <div class="col-md-4">
                Password
            </div>
            <div class="col-md-8">
                <input name="password" type="password" placeholder="1234" class="w-100">
            </div>
        </div>
        <div class="row py-3 px-2">
            <div class="col-md-6 text-center">
                <input type="checkbox" name="" id="" checked>
                <span>Remmember me</span>
            </div>
            <div class="col-md-6 text-center">
                <a href="" class="text-decoration-none">
                    Quên mật khẩu
                </a>
            </div>
        </div>
        {{#if loginFailed}}
            <div class="row py-3 px-2">
                <div class="col text-center">
                    <h4 class="text-danger">Sai tên đăng nhập hoặc mật khẩu</h4>
                </div>
            </div>
        {{/if}}
        <div class="row py-3 px-2">
            <div class="col text-center">
                <button class="w-50 btn btn-success admin-login-btn">Đăng nhập</button>
            </div>
        </div>
    </form>

</div>